<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    tools:context=".Login">



<fragment xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    tools:context=".location_Activity" />

    <TextView
        android:id="@+id/dest_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_below="@id/map"
        android:textSize="25dp"
        android:text="Destination to be set." />

    <Button
        android:id="@+id/btn_set_Point"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:layout_marginLeft="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/dest_info"
        android:layout_marginTop="20dp"
        android:background="@drawable/shaved_btn2"
        android:text="Set Point"
        android:textSize="30dp"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/btn_push_notification"
        android:layout_width="320dp"
        android:layout_height="80dp"
        android:layout_marginLeft="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btn_set_Point"
        android:layout_marginTop="20dp"
        android:background="@drawable/shaved_btn2"
        android:text="Push notification"
        android:textSize="30dp"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/btn_invite"
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:layout_below="@id/et_invitation"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shaved_btn2"
        android:text="Send invitation"
        android:textColor="#FFFFFF"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/et_invitation"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:background="@drawable/input"
        android:textColor="#D699FF"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:drawablePadding="5dp"
        android:layout_below="@id/btn_push_notification"
        android:drawableLeft="@drawable/icon_usrname"
        android:singleLine="true"
        android:hint="Invitation destination username" />

    <TextView
        android:id="@+id/group_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_below="@id/btn_invite"
        android:textSize="25dp"
        android:text="Your group information:\n             Loading......" />

    <TextView
        android:id="@+id/response_buffer_maps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="270dp"
        android:textSize="0dp"
        android:text="" />

    <TextView
        android:id="@+id/response2_buffer_maps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="270dp"
        android:textSize="0dp"
        android:text="" />

    <TextView
        android:id="@+id/invit_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_below="@id/group_info"
        android:textSize="25dp"
        android:text="Your invitation information:\n             Loading......" />

    <Button
        android:id="@+id/btn_invitation_accept"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_marginLeft="20dp"
        android:layout_centerHorizontal="false"
        android:layout_below="@id/invit_info"
        android:layout_marginTop="20dp"
        android:background="@drawable/shaved_btn2"
        android:text="Accept"
        android:textSize="30dp"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/btn_invitation_refuse"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_marginLeft="190dp"
        android:layout_centerHorizontal="false"
        android:layout_below="@id/invit_info"
        android:layout_marginTop="20dp"
        android:background="@drawable/shaved_btn2"
        android:text="Refuse"
        android:textSize="30dp"
        android:textColor="#FFFFFF"/>


</RelativeLayout>
</ScrollView>